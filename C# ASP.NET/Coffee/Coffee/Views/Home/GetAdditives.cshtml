@foreach (Coffee.Models.Additive additive in ViewBag.Additives)
{
	<div class="custom-control custom-checkbox my-1">
		@Html.CheckBox("additive_" + additive.Id.ToString(), false, new { @class = "custom-control-input", id = "additive_" + additive.Id.ToString() })
		<label class="custom-control-label" for="additive_@additive.Id.ToString()">@additive.Name</label>
	</div>
}
@Html.Hidden("coffee", (string)ViewBag.CoffeeId)