@{
	ViewBag.Title = "Авторизация";
}
@using (Html.BeginForm("Auth", "Home", FormMethod.Post))
{
	<div class="rounded border border-light p-2">
		@if (ViewBag.Message != String.Empty)
		{
			<p class="text-center text-info">@ViewBag.Message</p>
		}
		<div class="form-group row">
			<label for="email" class="col-sm-2 col-form-label">E-Mail</label>
			<div class="col-sm-10">
				<input name="Email" type="email" class="form-control" id="email" placeholder="email@example.com">
			</div>
		</div>
		<div class="form-group row">
			<label for="password" class="col-sm-2 col-form-label">Пароль</label>
			<div class="col-sm-10">
				<input name="Password" type="password" class="form-control" id="password" placeholder="Пароль">
			</div>
		</div>
		<button class="btn btn-primary" type="submit">Войти</button>
	</div>
}