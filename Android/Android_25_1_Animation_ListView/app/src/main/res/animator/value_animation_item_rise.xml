<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="together">

    <!--Ширина панели операций-->
    <animator android:valueType="intType"
        android:duration="300"
        android:valueFrom="0"
        android:valueTo="150dp"/>

    <!--Размер шрифта на кнопках-->
    <animator android:valueType="floatType"
        android:duration="300"
        android:valueFrom="0"
        android:valueTo="18"/>

    <!--Позиция x для панели элементов-->
    <animator android:valueType="intType"
        android:duration="300"
        android:valueFrom="0"
        android:valueTo="-150dp"/>

</set>